# AstraNetix BMS - Serverbyt.in Production Environment Configuration

# Domain Configuration - Replace with your actual serverbyt.in domain
DOMAIN=serverbyt.in
BASE_URL=https://serverbyt.in
API_URL=https://api.serverbyt.in

# Database Configuration - Update with your serverbyt.in database details
DATABASE_URL=postgresql://astranetix_user:your_secure_password@localhost:5432/astranetix_bms
POSTGRES_DB=astranetix_bms
POSTGRES_USER=astranetix_user
POSTGRES_PASSWORD=your_secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration - Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secure-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# CORS Configuration - Serverbyt.in domains
CORS_ORIGINS=https://serverbyt.in,https://app.serverbyt.in,https://isp.serverbyt.in,https://api.serverbyt.in,https://branch.serverbyt.in,https://user.serverbyt.in

# SSL Configuration
SSL_ENABLED=true
CDN_ENABLED=true

# Network Configuration
RADIUS_SERVER_HOST=localhost
RADIUS_SERVER_PORT=1812
RADIUS_SECRET=your-radius-secret

# AI/ML Configuration (Optional - Add your API keys)
OPENAI_API_KEY=your-openai-api-key
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key

# Payment Gateway Configuration (Optional - Add your keys)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Email Configuration (for notifications)
SMTP_SERVER=smtp.serverbyt.in
SMTP_PORT=587
SMTP_USERNAME=noreply@serverbyt.in
SMTP_PASSWORD=your-smtp-password
SMTP_TLS=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30