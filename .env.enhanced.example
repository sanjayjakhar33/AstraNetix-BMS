# Additional Environment Variables for Enhanced Features

# AI Services Configuration
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key_here
AI_MODEL_VERSION=gpt-4
AI_CONFIDENCE_THRESHOLD=0.7

# Multi-language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,ar,hi
TRANSLATION_SERVICE_API_KEY=your_translation_api_key

# Multi-currency Support  
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,INR,CAD,AUD,JPY
CURRENCY_EXCHANGE_API_KEY=your_exchange_rate_api_key

# Email and SMS Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Webhook Configuration
WEBHOOK_SECRET_KEY=your_webhook_secret_key
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3

# Backup and Disaster Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key
BACKUP_STORAGE_TYPE=s3  # s3, gcs, azure, local
AWS_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_for_error_tracking
DATADOG_API_KEY=your_datadog_api_key
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Security Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
SECURITY_HEADERS_ENABLED=true
CORS_ALLOW_CREDENTIALS=true

# Mobile App Configuration
MOBILE_APP_NAME=ISP Mobile
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_SERVER_KEY=your_firebase_server_key
APPLE_PUSH_CERT_PATH=/path/to/apple_push_cert.pem
GOOGLE_PLAY_CONSOLE_JSON=/path/to/google_play_console.json

# Training Platform
TRAINING_CONTENT_CDN=https://cdn.your-domain.com/training
TRAINING_VIDEO_PROVIDER=vimeo  # youtube, vimeo, wistia
CERTIFICATION_ISSUER=AstraNetix Training Center

# Sustainability Tracking
CARBON_OFFSET_PROVIDER=climatetrade  # climatetrade, goldstandard, verra
CARBON_OFFSET_API_KEY=your_carbon_offset_api_key
ENERGY_MONITORING_ENABLED=true
RENEWABLE_ENERGY_TRACKING=true

# Business Intelligence
BI_TOOLS_ENABLED=true
TABLEAU_SERVER_URL=https://tableau.your-domain.com
POWERBI_WORKSPACE_ID=your_powerbi_workspace_id
GRAFANA_URL=https://grafana.your-domain.com

# CRM Integrations
HUBSPOT_API_KEY=your_hubspot_api_key
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
MAILCHIMP_API_KEY=your_mailchimp_api_key

# Network Monitoring
SNMP_COMMUNITY_STRING=public
SNMP_VERSION=2c
NETWORK_SCAN_INTERVAL=300  # seconds
DEVICE_DISCOVERY_ENABLED=true

# Performance Optimization
REDIS_MAX_MEMORY=512mb
REDIS_MEMORY_POLICY=allkeys-lru
DATABASE_POOL_SIZE=20
DATABASE_MAX_CONNECTIONS=100
CACHE_TTL=3600  # seconds

# Compliance and Audit
GDPR_ENABLED=true
PCI_DSS_ENABLED=true
ISO_27001_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
DATA_RETENTION_DAYS=2555